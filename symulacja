function showZoneInfo(zone) {
    const infoDiv = document.getElementById('zone-info');
    const zoneData = zonesData.find(data => data.zone === zone);
    if (zoneData) {
        const animalsList = zoneData.animals.map(animal => <li><span class="animal-signature">ğŸ¾</span> ${animal}</li>).join('');
        const plantsList = zoneData.plants.map(plant => <li><span class="plant-signature">ğŸŒ¿</span> ${plant}</li>).join('');
        const weatherInfo = `
            <h3>Warunki pogodowe:</h3>
            <p><span class="weather-signature">â˜€ï¸</span> Temperatura: ${zoneData.weather.temperature}Â°C</p>
            <p><span class="weather-signature">ğŸ’§</span> WilgotnoÅ›Ä‡: ${zoneData.weather.humidity}%</p>
            <p><span class="weather-signature">â˜”ï¸</span> Opady: ${zoneData.weather.precipitation}</p>
<p><span class="weather-signature">ğŸ’¨</span> Wiatr: ${zoneData.weather.wind}</p>
        ;
        infoDiv.innerHTML = 
            <h2>Strefa klimatyczna ${zoneData.zone}</h2>
            <h3>ZwierzÄ™ta:</h3>
            <ul>${animalsList}</ul>
            <h3>Rosliny:</h3>
